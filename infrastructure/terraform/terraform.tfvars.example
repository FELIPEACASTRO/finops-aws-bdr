################################################################################
# FinOps AWS - Exemplo de Configuracao Terraform
# Copie este arquivo para terraform.tfvars e ajuste os valores
################################################################################

################################################################################
# Configuracoes Gerais
################################################################################

project_name = "finops-aws"
environment  = "prod"
aws_region   = "us-east-1"
owner        = "finops-team"
cost_center  = "finops"
app_version  = "1.0.0"

################################################################################
# Configuracoes Lambda
################################################################################

lambda_runtime                        = "python3.11"
lambda_timeout                        = 300
lambda_memory_size                    = 512
lambda_reserved_concurrent_executions = 5
lambda_architecture                   = "x86_64"

################################################################################
# Configuracoes de Agendamento
# Com 5 execucoes por dia, use estas expressoes (UTC):
################################################################################

schedule_enabled    = true
schedule_expression = "cron(0 6 * * ? *)"

schedule_expressions = [
  "cron(0 6 * * ? *)",
  "cron(0 9 * * ? *)",
  "cron(0 12 * * ? *)",
  "cron(0 15 * * ? *)",
  "cron(0 18 * * ? *)"
]

################################################################################
# Configuracoes Multi-Account
# Descomente e configure se tiver multiplas contas AWS
################################################################################

enable_multi_account   = false
organization_role_name = "FinOpsReadOnlyRole"
target_account_ids     = []

################################################################################
# Configuracoes Multi-Region
################################################################################

enable_multi_region = true
target_regions = [
  "us-east-1",
  "us-east-2",
  "us-west-2",
  "eu-west-1",
  "sa-east-1"
]

################################################################################
# Servicos para Analise
# Deixe vazio para analisar todos os 252 servicos
################################################################################

enabled_services  = []
excluded_services = []

################################################################################
# Configuracoes de Armazenamento
################################################################################

s3_bucket_name       = ""
s3_retention_days    = 90
enable_s3_versioning = true

################################################################################
# Configuracoes DynamoDB
################################################################################

dynamodb_billing_mode   = "PAY_PER_REQUEST"
dynamodb_read_capacity  = 5
dynamodb_write_capacity = 5

################################################################################
# Configuracoes de Logging
################################################################################

log_retention_days  = 30
enable_xray_tracing = true
log_level           = "INFO"

################################################################################
# Configuracoes de Alertas
################################################################################

enable_alerts           = true
alert_email             = "seu-email@empresa.com"
alert_slack_webhook_url = ""

################################################################################
# Configuracoes de Seguranca
################################################################################

enable_kms_encryption   = true
kms_key_deletion_window = 30

################################################################################
# Configuracoes de VPC (opcional)
################################################################################

enable_vpc         = false
vpc_id             = ""
subnet_ids         = []
security_group_ids = []
