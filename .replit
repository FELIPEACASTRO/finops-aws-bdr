modules = ["bash", "python-3.11", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FinOps Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FinOps React Frontend"

[[workflows.workflow]]
name = "FinOps Dashboard"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=8000 python app.py"
waitForPort = 8000

[[workflows.workflow]]
name = "FinOps React Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 41427
externalPort = 3000

[[ports]]
localPort = 46415
externalPort = 3001

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind=0.0.0.0:5000", "--workers=2", "--reuse-port", "app:app"]

[userenv]

[userenv.development]
PORT = "8000"
